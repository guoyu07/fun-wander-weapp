/* pages/building/building.wxss */
.search-view {
    width:100%;
	height: 145px;
	display:flex;
	flex-direction: column;
	background-color:#efeff4;
}

.search-view > view.search-item {
	display: flex;
	flex-direction: row;
    background: #fff;
	margin: 10px;
}

.search-view > .view-area{
	color: #666;
	font-size: 32rpx;
	padding: 20rpx 0 0 20rpx;
}

.search-view > view.search-item icon {
	height:35px;
	width:35px;
	display:flex;
	margin-left:10rpx;
	margin-right:10rpx;
	justify-content:center;
	align-items:center;

}

.search-btn {
	color: #fff;
	height: 35px;
	font-size: 28rpx;
	background:#25c6fc;
	padding: 0 12px;
	border-radius: 0;
}

.search-btn::after{
  border: none;
  border-radius: 0;
}

.search-input {
	flex: 1;
	height: 35px;
    font-size: 30rpx;
}

.search-view .shotcuts {
	height: 35px;
	padding: 0 20rpx;
	background:#efeff4;
}

.search-view > .shotcuts > .shortcut-item {
	height: 25px;
	width: 25px;
	padding: 5px 10px;
	border-right:1px solid #ddd;
}

.search-view > .shotcuts > .shortcut-item:last-child{
	border: none;
}

.activeBg {
	 background: #25c6fc;
}

.search-view .data-list-panel{
	color:#666;
	font-size: 28rpx;
	word-spacing: 2rpx;
	background:#efeff4;
	padding:0 20rpx 10rpx 20rpx;
}

.data-list {
	flex: 1;
    width: 100%;
	/* display: flex; */
	overflow: auto;
	/* flex-direction: column */
}

.list-item {
	height: 70px;
	display: flex;
	flex-direction: row;
    border-bottom: 1rpx solid #eee;
    padding: 5rpx 20rpx;
}

.list-item > image.serchIcon {
	height: 35px;
    width: 35px;
	margin: 10px 15px 10px 0;
	align-self: center;
}

.list-item > .searchContent {
	flex: 1;
	flex-direction: column;
}

.list-item > .searchContent > text.name {
	display: flex;
	height: 40px;
	font-size: 36rpx;
	align-items: flex-end;
}

.list-item > .searchContent > view.detail {
	display: flex;
	padding: 3px 0;
	align-items: flex-end;
}

.list-item text.distance {
    font-size: 24rpx;
    color: #ccc;
}

.list-item text.address {
    padding-left: 20rpx;
    font-size: 28rpx;
	max-width: 200px;
}